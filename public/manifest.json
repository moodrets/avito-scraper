{
    "manifest_version": 3,
    "name": "Avito Reviews Parser",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "avito-icon.png"
        },
        "default_title": "Парсер отзывов Авито"
    },
    "icons": {
        "16": "avito-icon.png",
        "32": "avito-icon.png",
        "48": "avito-icon.png",
        "128": "avito-icon.png"
    },
    "options_page": "options.html",
    "permissions": ["activeTab", "storage", "scripting"],
    "content_scripts": [
        {
            "matches": ["https://www.avito.ru/"],
            "run_at": "document_end",
            "js": [
                "assets/browser.js",
                "assets/content.js"
            ]
        }
    ]
}
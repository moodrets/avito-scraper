{
    "manifest_version": 3,
    "name": "Avito Scraper",
    "version": "1.1.0",
    "action": {
        "default_icon": {
            "16": "avito-icon.png"
        },
        "default_title": "Парсер Авито"
    },
    "icons": {
        "16": "avito-icon.png",
        "32": "avito-icon.png",
        "48": "avito-icon.png",
        "128": "avito-icon.png"
    },
    "options_page": "options.html",
    "permissions": ["activeTab", "tabs", "storage", "scripting"],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_end",
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://www.avito.ru/user/*"
    ],
    "background": {
        "service_worker": "assets/background.js"
    }
}